<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <include layout="@layout/app_bar"
        android:id="@+id/bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/> <!--툴바-->

    <ImageView
        android:id="@+id/bellMod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/minusbtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bar" />

    <TextView
        android:id="@+id/makeMemberMod"
        style="@style/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        app:layout_constraintLeft_toRightOf="@+id/bellMod"
        app:layout_constraintTop_toBottomOf="@+id/bar"
        />

    <TextView
        android:id="@+id/warningMod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textColor="#FF0000"
        android:text="*표시는 필수입력 항목입니다."
        app:layout_constraintLeft_toRightOf="@id/makeMemberMod"
        app:layout_constraintTop_toBottomOf="@id/bar"/>

    <ScrollView
        android:id="@+id/sclMod"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/makeMemberMod"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/joiningMod"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/makeMemberMod">

            <TextView
                android:id="@+id/nameMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="*이름 : "
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/joiningMod"
                app:layout_constraintTop_toTopOf="@id/joiningMod" />

            <EditText
                android:id="@+id/edtNameMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="5"
                android:textSize="15sp"
                android:textColor="#000000"
                app:layout_constraintLeft_toLeftOf="@id/joiningMod"
                app:layout_constraintTop_toBottomOf="@id/nameMod" />

            <TextView
                android:id="@+id/genderMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="*성별 : "
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginLeft="110dp"
                app:layout_constraintLeft_toRightOf="@id/nameMod"
                app:layout_constraintTop_toTopOf="@id/joining" />

            <Spinner
                android:id="@+id/spGenderMod"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toRightOf="@id/edtNameMod"
                app:layout_constraintTop_toBottomOf="@id/genderMod"/>

            <TextView
                android:id="@+id/birthMemberMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="*생년월일 : "
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/edtNameMod"
                app:layout_constraintLeft_toLeftOf="@id/joiningMod"/>

            <Spinner
                android:id="@+id/birthYMod"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="@id/joiningMod"
                app:layout_constraintTop_toBottomOf="@+id/birthMemberMod"/>

            <TextView
                android:id="@+id/yearMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="년"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_marginTop="13dp"
                app:layout_constraintLeft_toRightOf="@+id/birthYMod"
                app:layout_constraintTop_toBottomOf="@id/birthMemberMod"/>

            <Spinner
                android:id="@+id/birthMMod"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toRightOf="@+id/yearMod"
                app:layout_constraintTop_toBottomOf="@+id/birthMemberMod"/>

            <TextView
                android:id="@+id/monthMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_marginTop="13dp"
                app:layout_constraintLeft_toRightOf="@+id/birthMMod"
                app:layout_constraintTop_toBottomOf="@id/birthMemberMod"/>

            <Spinner
                android:id="@+id/birthDMod"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toRightOf="@id/monthMod"
                app:layout_constraintTop_toBottomOf="@+id/birthMemberMod"/>

            <TextView
                android:id="@+id/dayMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_marginTop="13dp"
                app:layout_constraintLeft_toRightOf="@+id/birthDMod"
                app:layout_constraintTop_toBottomOf="@id/birthMemberMod"/>

            <TextView
                android:id="@+id/idMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*아이디 : "
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                app:layout_constraintLeft_toLeftOf="@id/joiningMod"
                app:layout_constraintTop_toBottomOf="@id/yearMod"/>

            <EditText
                android:id="@+id/edtIdMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:textSize="15sp"
                android:textColor="#000000"
                app:layout_constraintLeft_toLeftOf="@id/joiningMod"
                app:layout_constraintTop_toBottomOf="@id/idMod" />

            <Button
                android:id="@+id/checkIdMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중복확인"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@id/edtIdMod"
                app:layout_constraintTop_toBottomOf="@+id/idMod"/>

            <TextView
                android:id="@+id/passwordMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*비밀번호 : "
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                app:layout_constraintLeft_toLeftOf="@id/joining"
                app:layout_constraintTop_toBottomOf="@id/edtIdMod"/>

            <EditText
                android:id="@+id/edtPasswordMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:textSize="15sp"
                android:textColor="#000000"
                android:inputType="textPassword"
                app:layout_constraintLeft_toLeftOf="@id/joiningMod"
                app:layout_constraintTop_toBottomOf="@id/passwordMod" />

            <TextView
                android:id="@+id/checkPassMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*비밀번호 확인 : "
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                app:layout_constraintLeft_toLeftOf="@id/joiningMod"
                app:layout_constraintTop_toBottomOf="@id/edtPasswordMod"/>

            <EditText
                android:id="@+id/edtCheckPassMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:textSize="15sp"
                android:textColor="#000000"
                android:inputType="textPassword"
                app:layout_constraintLeft_toLeftOf="@id/joiningMod"
                app:layout_constraintTop_toBottomOf="@id/checkPassMod" />

            <TextView
                android:id="@+id/phoneMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*휴대폰 번호: "
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                app:layout_constraintLeft_toLeftOf="@id/joiningMod"
                app:layout_constraintTop_toBottomOf="@id/edtCheckPassMod"/>

            <Spinner
                android:id="@+id/spinnerNumMod"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="@id/joiningMod"
                app:layout_constraintTop_toBottomOf="@+id/phoneMod"/>

            <TextView
                android:id="@+id/n1Mod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_marginTop="13dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/spinnerNumMod"
                app:layout_constraintTop_toBottomOf="@+id/phoneMod"/>

            <EditText
                android:id="@+id/edtNum1Mod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="4"
                android:textSize="15sp"
                android:textColor="#000000"
                app:layout_constraintLeft_toRightOf="@+id/n1Mod"
                app:layout_constraintTop_toBottomOf="@+id/phoneMod"/>

            <TextView
                android:id="@+id/n2Mod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_marginTop="13dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/edtNum1Mod"
                app:layout_constraintTop_toBottomOf="@+id/phoneMod"/>

            <EditText
                android:id="@+id/edtNum2Mod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="4"
                android:textSize="15sp"
                android:textColor="#000000"
                app:layout_constraintLeft_toRightOf="@+id/n2Mod"
                app:layout_constraintTop_toBottomOf="@+id/phoneMod"/>

            <TextView
                android:id="@+id/emailMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*이메일: "
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                app:layout_constraintLeft_toLeftOf="@id/joiningMod"
                app:layout_constraintTop_toBottomOf="@id/edtNum2Mod"/>

            <Button
                android:id="@+id/btnEmailMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@id/emailMod"
                app:layout_constraintLeft_toRightOf="@id/edtEmailMod"/>

            <EditText
                android:id="@+id/edtEmailMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="mjc2020@naver.com"
                android:textSize="15sp"
                android:textColor="#000000"
                app:layout_constraintLeft_toLeftOf="@id/joiningMod"
                app:layout_constraintTop_toBottomOf="@id/emailMod"/>

            <TextView
                android:id="@+id/profileImgMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*프로필 사진: "
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toLeftOf="@+id/joiningMod"
                app:layout_constraintTop_toBottomOf="@id/edtEmailMod"/>

            <Button
                android:id="@+id/btnImgMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="첨부"
                app:layout_constraintLeft_toRightOf="@id/profileImgMod"
                app:layout_constraintTop_toBottomOf="@id/edtEmailMod"/>


            <ImageView
                android:id="@+id/photoMod"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginTop="13dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnImgMod"/>

            <Button
                android:id="@+id/btnCompleteMod"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="수정완료"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="100dp"
                app:layout_constraintTop_toBottomOf="@+id/photoMod"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>